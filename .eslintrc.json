{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "standard"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "project": [
            "./tsconfig.json",
            "./tsconfig-test.json"
        ]
    },
    "rules": {
        "semi": "off",
        "require-jsdoc": "error",
        "valid-jsdoc": ["error", {"requireReturn": false, "requireParamType": false, "requireReturnType": false }],
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/consistent-type-assertions": ["error", { "assertionStyle": "as" }],
        "@typescript-eslint/member-delimiter-style": "error"
    }
}
